<div class="container" style="margin-top:30px">
  <div class="col-md-4 col-md-offset-4">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">
          <strong> Movimentar Material </strong>
        </h3>
      </div>
      <div class="panel-body">
        <%= form_for(transaction) do |f| %>
          <% if transaction.errors.any? %>
            <div class="alert alert-danger">
              <ul>
                <% if transaction.errors.any? %>
                  <% transaction.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                <% end %>
              </ul>
            </div>
          <% end %>
          <% if !@material.nil? && @material.errors.any? %>
            <div class="alert alert-danger">
              <% if @material.errors.any? %>
                <% @material.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              <% end %>
              <ul>
            </div>
          <% end %>

          <%= f.fields_for :material do |ff| %>
            <div style="font-size: 12px", class="form-group">
              <%= ff.label :name, class: "control-label" %>
              <%= ff.text_field :name, disabled: true, class: "form-control" %>
            </div>
          <% end %>

          <div style="font-size:12px" class="form-group">
            <%= f.label :ammount, class: "control-label" %>
            <%= f.number_field :ammount, class: "form-control" %>
          </div>

          <div style="font-size:12px" class="form-group">
            <%= f.label :operation, class: "control-label" %>
            <%= radio_button(:transaction, :operation, MovimentationOperation::ADD) %> Adicionar
            <%= radio_button(:transaction, :operation, MovimentationOperation::REMOVE) %> Remover
          </div>
          <div class="form-group text-center">
            <%= f.submit "Movimentar", class: "btn btn-success" %>
            <%= link_to 'Voltar', materials_path, class: "btn btn-default"%>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
</div>
