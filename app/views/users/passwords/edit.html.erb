<div class="container" style="margin-top:30px">
  <div class="col-md-4 col-md-offset-4">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">
          <strong> Alterar Senha </strong>
        </h3>
      </div>
      <div class="panel-body">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
          <% unless devise_error_messages! %>
            <div class="alert alert-danger">
              <%= devise_error_messages! %>
            </div>
          <% end %>
          <%= f.hidden_field :reset_password_token %>

          <div style="margin-bottom: 12px" class="input-group">
            <span class="input-group-addon">
              <i class="glyphicon glyphicon-lock"></i>
            </span>
            <%= f.password_field :password, autofocus: true, autocomplete: "off", class: "form-group", label: "senha" %>
          </div>

          <div style="margin-bottom: 12px" class="input-group">
            <span class="input-group-addon">
              <i class="glyphicon glyphicon-lock"></i>
            </span
            <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-group", label: "confirmar senha" %>
          </div>

          <div class="form-group text-center">
            <%= f.submit "Alterar minha senha", class: "btn btn-lg btn-success" %>
          </div>
        <% end %>

        <%= render "users/shared/links" %>
      </div>
    </div>
  </div>
</div>
