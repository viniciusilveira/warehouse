<div class="container container-fluidr center-block">
  <div class="content">
    <% if !flash.now[:notice].nil? %>
      <div class="alert  alert-success">
        <a class="close" data-dismiss="alert" href="#">Ã—</a>  <%= flash.now[:notice] %>
      </div>
    <% end %>
    <div class="col-sm-12">
      <%= link_to 'Voltar', root_path, class: "btn btn-primary" %>
      <h1>Materiais</h1>
      <div class="col-sm-12">
        <table class="table">
          <thead>
            <tr>
              <th>Nome</th>
              <th>Quantidade</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @materials.each do |material| %>
              <tr>
                <td><%= material.name %></td>
                <td><%= material.ammount %></td>
                <td><%= link_to t('links.edit'), edit_material_path(material) %></td>
                <td><%= link_to t('transaction.one'),  new_transaction_path(material_id: material.id) %> </td>
                <td><%= link_to t('transaction.other'), transactions_path(material_id: material.id) %> </td>
                <td><%= link_to t('links.destroy'), material, method: :delete, data: { confirm: t('alerts.messages.confirm') } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
    <br>

    <%= link_to 'Novo Material', new_material_path %>
  </div>
</div>
