<p id="notice"><%= notice %></p>

<h1>Materials</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Ammount</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @materials.each do |material| %>
      <tr>
        <td><%= material.name %></td>
        <td><%= material.ammount %></td>
        <td><%= link_to t('links.show'), material %></td>
        <td><%= link_to t('links.edit'), edit_material_path(material) %></td>
        <td><%= link_to t('links.movimentation'),  new_transaction_path(material_id: material.id) %> </td>
        <td><%= link_to t('links.destroy'), material, method: :delete, data: { confirm: t('alerts.messages.confirm') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Material', new_material_path %>
