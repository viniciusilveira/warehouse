<%= form_for(material) do |f| %>
  <% if material.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(material.errors.count, "error") %></h2>

      <ul>
      <% material.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name  %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :ammount %>
    <%= f.number_field :ammount , disabled: f.object.persisted? %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
