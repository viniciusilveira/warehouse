<div class="container" style="margin-top:30px">
  <div class="col-md-4 col-md-offset-4">
    <div class="panel panel-default">
      <div class="panel-heading">
      </div>
      <div class="panel-body">
        <%= form_for(material) do |f| %>
          <% if material.errors.any? %>
            <div class="alert alert-danger">
              <ul>
                <% material.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div style="margin-bottom: 12px" class="input-group">
            <%= f.label :name, class: "control-label" %>
            <%= f.text_field :name, class: "form-control", placeholder: "nome material" %>
          </div>

          <div style="margin-bottom: 12px" class="input-group">
            <%= f.label :ammount, class: "control-label" %>
            <%= f.text_field :ammount, class: "form-control", disabled: f.object.persisted?, placeholder: "quantidade" %>
          </div>
          <div class="form-group text-center">
            <%= f.submit "Salvar",  class: "btn btn-success" %>
            <%= link_to 'Voltar', materials_path, class: "btn btn-default"%>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
